    <StackPanel x:Name="Scroller" Background="{StaticResource ResourceKey=ThemeColor1}">
        <ItemsControl x:Name="LayoutRoot" ItemsSource="{Binding Restaurants}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <StackPanel>
                        <Button Style="{StaticResource ContentButton}" 
                                Click="Button_Tapped">
                            <Border Background="{StaticResource ResourceKey=ThemeColor2}"
                                    x:Name="Item">
                                <TextBlock Text="{Binding Name, Mode=OneWay}"
                                           Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                           FontSize="26" Margin="20,5,0,5"
                                           FontFamily="Segoe UI" FontWeight="SemiBold"/>
                            </Border>
                        </Button>

                        <TextBlock Text="{Binding Menu, Mode=OneWay}"
                                   TextAlignment="Left"
                                   Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                   TextWrapping="Wrap"
                                   FontSize="22"
                                   Margin="20,10" />

                    </StackPanel>
                    
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>

