<Page
    x:Class="Edumenu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Edumenu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Edumenu.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <local:SlideInMenuContentControl x:Name="slidein">
        
        <!--Left side panel-->
        <local:SlideInMenuContentControl.LeftMenuContent>
            <Grid Background="{StaticResource ResourceKey=ThemeColor1}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--Header-->
                <TextBlock Text="edumenu" Margin="20,0,0,0" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                FontSize="26" FontFamily="Segoe WP" FontWeight="Light"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>
                <!--Menu-->
                <StackPanel Grid.Row="1">
                    <Border Background="{StaticResource ResourceKey=ThemeColor2}" Margin="0,0,0,0">
                        <TextBlock Text="VIIKONPÄIVÄT" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                   FontFamily="Segoe UI" FontWeight="Black"
                                   FontSize="21" Margin="20,5,0,5"
                                   HorizontalAlignment="Left"/>
                    </Border>
                    <TextBlock Text="Maanantai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Tiistai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Keskiviikko" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Torstai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Perjantai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Lauantai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Sunnuntai" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>

                    <Border Background="{StaticResource ResourceKey=ThemeColor2}" Margin="0,15,0,0">
                        <TextBlock Text="MUUTA" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                   FontFamily="Segoe UI" FontWeight="Black"
                                   FontSize="14" Margin="20,5,0,5"
                                   HorizontalAlignment="Left"/>
                    </Border>
                    <TextBlock Text="Asetukset" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                    <TextBlock Text="Tietoa sovelluksesta" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                               FontSize="20" Margin="30,10,0,0"/>
                </StackPanel>
            </Grid>
        </local:SlideInMenuContentControl.LeftMenuContent>
        
        <!--Main content panel-->
        <local:SlideInMenuContentControl.Content>
            <Grid Background="{StaticResource ResourceKey=ThemeColor3}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="58" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Header-->
                <Border Background="{StaticResource ResourceKey=ThemeColor1}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--School name-->
                        <Button HorizontalAlignment="Center" BorderThickness="0"
                                VerticalContentAlignment="Center">
                            <TextBlock Text="TTY" Margin="0" Foreground="{StaticResource ResourceKey=ThemeColor3}"
                                       FontSize="23" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Tapped="SchoolText_Tapped"/>
                        </Button>
                        <!--Hamburger button-->
                        <Button ManipulationMode="All"
                                Height="58"
                                VerticalAlignment="Center"
                                Margin="5,2,0,0"
                                x:Name="LeftButtonTapped"
                                Width="50"
                                MinWidth="50"
                                HorizontalAlignment="Left"
                                Tapped="HamburgerButton_Tapped"
                                BorderThickness="0">
                            <StackPanel>
                                <Rectangle Width="30" Height="2" Fill="{StaticResource ResourceKey=ThemeColor3}" />
                                <Rectangle Width="30" Height="2" Fill="{StaticResource ResourceKey=ThemeColor3}" Margin="0,4,0,0" />
                                <Rectangle Width="30" Height="2" Fill="{StaticResource ResourceKey=ThemeColor3}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Button>
                        <Border Grid.Row="1" Height="2" Background="{StaticResource ResourceKey=ThemeColor1}" />
                    </Grid>
                     
                </Border>

                <!--All schools drop down menu-->
                <!--<StackPanel x:Name="SchoolsMenu" Grid.Row="1" Background="{StaticResource ResourceKey=ThemeColor1}" Height="2">
                    <TextBlock HorizontalAlignment="Center" Text="TAY" FontSize="24" />
                    <TextBlock HorizontalAlignment="Center" Text="TAYS" FontSize="24" />
                    <TextBlock HorizontalAlignment="Center" Text="TAMK" FontSize="24" />
                    <TextBlock HorizontalAlignment="Center" Text="TAKK" FontSize="24" />
                </StackPanel>-->

                <!--Content, i.e., the restaurant menus-->
                <!--<ScrollViewer VerticalScrollBarVisibility="Hidden"
                              Grid.Row="2">-->

                    <views:RestaurantView Grid.Row="1"
                                          HorizontalAlignment="Stretch"
                                          HorizontalContentAlignment="Stretch"/>


            </Grid>
            
        </local:SlideInMenuContentControl.Content>
    </local:SlideInMenuContentControl>
    
</Page>
